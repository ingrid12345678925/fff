<section class="checkout-page">
    <h1>Finalizar Compra</h1>
    <form action="/checkout" method="post">
        <div class="customer-info">
            <h2>Informações do Cliente</h2>
            <label for="name">Nome:</label>
            <input type="text" id="name" name="customer[name]" required>
            
            <label for="email">E-mail:</label>
            <input type="email" id="email" name="customer[email]" required>
            
            <label for="address">Endereço:</label>
            <input type="text" id="address" name="customer[address]" required>
        </div>

        <div class="payment-info">
            <h2>Pagamento</h2>
            <label for="card">Número do Cartão:</label>
            <input type="text" id="card" name="payment[card_number]" required>
            
            <label for="expiry">Validade:</label>
            <input type="text" id="expiry" name="payment[expiry_date]" required>
            
            <label for="cvv">CVV:</label>
            <input type="text" id="cvv" name="payment[cvv]" required>
        </div>

        <button type="submit" class="btn">Confirmar Pedido</button>
    </form>
</section>
